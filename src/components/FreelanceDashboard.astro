---
import { getYearStats } from '../utils/statistics';
import { getSubjectColor } from '../utils/subjectColors';
import { ui, defaultLang } from '../i18n/ui';

interface Props {
  year: number;
  lang?: string; 
}

const { year, lang = 'es' } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];

const stats = getYearStats(year, lang);

const monthNames = Array.from({ length: 12 }, (_, i) => {
  const d = new Date(2000, i, 1);
  return d.toLocaleDateString(lang, { month: 'short' }); 
});
---

{stats ? (
  <div class="dashboard-container fade-in">
    
    {/* 1. KPI Principal */}
    <div class="kpi-card card-glass">
      <h3 class="chart-title" style="text-align: center;">{t['freelance.impact']}&nbsp;{year}</h3>
      <div class="kpi-number">{stats.total}</div>
      <p class="kpi-desc">{t['freelance.completed']}</p>
    </div>

    {/* 2. Gráfica de Barras */}
    <div class="chart-card card-glass bar-chart-span">
      <h3 class="chart-title">{t['freelance.topSubjects']}</h3>
      <div class="bars-container">
        {stats.topSubjects.slice(0, 5).map((sub) => {
          const color = getSubjectColor(sub.name);
          return (
            <div class="bar-row">
              <div class="bar-info">
                <span class="bar-label">{sub.name}</span>
                <span class="bar-value">{sub.count}</span>
              </div>
              <div class="progress-bg">
                <div 
                  class="progress-fill" 
                  style={`width: ${sub.percentage}%; background-color: rgb(${color}); box-shadow: 0 0 10px rgba(${color}, 0.4);`}
                ></div>
              </div>
            </div>
          );
        })}
      </div>
    </div>

    {/* 3. Tipos de Servicio */}
    <div class="chart-card card-glass">
      <h3 class="chart-title">{t['freelance.serviceTypes']}</h3>
      <div class="types-list">
        {stats.topTypes.map((type) => (
          <div class="type-item">
            <div class="type-header">
              <span class="type-name">{type.name}</span>
              <span class="type-pct">{type.percentage}%</span>
            </div>
            <div class="mini-bar-bg">
              <div class="mini-bar-fill" style={`width: ${type.percentage}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* 4. Gráfica Temporal */}
    <div class="chart-card card-glass trend-chart-span">
      <h3 class="chart-title">{t['freelance.monthly']}</h3>
      <div class="trend-chart">
        {stats.monthlyTrend.map((val, index) => (
          <div class="trend-col-wrapper">
            <div 
              class="trend-bar" 
              style={`height: ${val > 0 ? (val / stats.maxMonthValue) * 100 : 2}%`}
            >
              {val > 0 && <span class="trend-val">{val}</span>}
            </div>
            <span class="trend-label">{monthNames[index]}</span>
          </div>
        ))}
      </div>
    </div>

  </div>
) : (
  <div class="empty-state">
    <p>⚠️ {t['freelance.noData']} {year}</p>
  </div>
)}

<style>
  /* --- MÓVIL (Base) --- */
  .dashboard-container { 
    display: grid;
    grid-template-columns: 1fr; /* Una sola columna en móvil */
    gap: 16px; 
    margin-top: 20px;
    padding: 0 12px;
    box-sizing: border-box;
    width: 100%;
  }

  .card-glass { 
    background: var(--code-bg); 
    border: 1px solid var(--border); 
    border-radius: 16px; 
    padding: 20px;
    width: 100%;
    max-width: 450px; /* Controlamos el ancho en móvil */
    margin: 0 auto;   /* CENTRADO REAL */
    box-sizing: border-box;
  }
  
  .chart-title { font-size: 1.15rem; color: var(--muted); margin-bottom: 15px; font-weight: 600; text-align: left; }
  
  /* KPI Específico */
  .kpi-card { text-align: center; }
  .kpi-number { font-size: 4.5rem; font-weight: 800; color: var(--link); line-height: 1; margin: 10px 0; }
  .kpi-desc { color: var(--muted); font-size: 0.95rem; font-weight: 500; }
  
  /* Bars */
  .bars-container { display: flex; flex-direction: column; gap: 12px; }
  .bar-info { display: flex; justify-content: space-between; font-size: 0.85rem; margin-bottom: 4px; color: var(--text); }
  .progress-bg { height: 8px; background: var(--border); border-radius: 4px; overflow: hidden; }
  .progress-fill { height: 100%; border-radius: 4px; transition: width 1s ease; }
  
  /* Types */
  .types-list { display: flex; flex-direction: column; gap: 15px; }
  .type-header { display: flex; justify-content: space-between; font-size: 0.85rem; margin-bottom: 4px; }
  .mini-bar-bg { height: 4px; background: var(--border); border-radius: 2px; }
  .mini-bar-fill { height: 100%; background: var(--link); border-radius: 2px; }
  
  /* Monthly Chart */
  .trend-chart { display: flex; align-items: flex-end; justify-content: space-between; height: 140px; padding-top: 25px; gap: 4px; }
  .trend-col-wrapper { display: flex; flex-direction: column; align-items: center; flex: 1; height: 100%; justify-content: flex-end; }
  .trend-bar { width: 100%; max-width: 18px; background: linear-gradient(to top, var(--link), #8b5cf6); border-radius: 4px 4px 0 0; position: relative; min-height: 3px; }
  .trend-val { position: absolute; top: -22px; left: 50%; transform: translateX(-50%); font-size: 0.7rem; color: var(--text); font-weight: 700; }
  .trend-label { margin-top: 10px; font-size: 0.65rem; color: var(--muted); text-transform: capitalize; }
  
  .empty-state { text-align: center; padding: 40px; border: 1px dashed var(--border); border-radius: 12px; color: var(--muted); width: 100%; grid-column: 1 / -1; }

  /* --- ESCRITORIO (A partir de 900px) --- */
  @media (min-width: 900px) {
    .dashboard-container { 
      grid-template-columns: repeat(3, 1fr); /* Volvemos a las 3 columnas */
      padding: 0;
    }
    .card-glass { 
      max-width: none; /* Quitamos el límite de ancho de móvil */
      margin: 0;       /* Quitamos el margen auto para que llene su celda */
    }
    .bar-chart-span { grid-column: span 2; } /* Distribución favorita */
    .trend-chart-span { grid-column: span 3; } /* Distribución favorita */
    .trend-label { font-size: 0.75rem; }
    .trend-bar { max-width: 25px; }
  }

  .fade-in { animation: fadeIn 0.5s ease-in; }
  @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>