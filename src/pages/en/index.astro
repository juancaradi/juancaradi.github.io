---
import Layout from '../../layouts/Layout.astro';
import statsData from '../../data/stats.json'; // 🧠 Same data source

const stats = [
  {
    value: statsData.activeProjects,
    label: "Ongoing Projects",
    color: "var(--color-active)", 
    pulse: true
  },
  {
    value: statsData.completedProjects,
    label: "Completed Projects",
    color: "var(--color-done)",
    pulse: false
  },
  {
    value: statsData.freelanceSolutions,
    label: "Freelance Solutions",
    color: "var(--color-freelance)",
    pulse: false
  },
  {
    value: statsData.notesCount,
    label: "Study Notes",
    color: "var(--color-notes)",
    pulse: false
  }
];
---

<Layout title="Camilo Ramírez | Mathematics & Data" lang="en">
  <section class="hero">
    <div class="hero-content">
      <span class="badge">Available for projects</span>
      
      <h1 class="hero-title">
        Exploring <span class="gradient-text">abstract beauty</span> and its real-world application.
      </h1>
      
      <p class="hero-desc">
        Hi, I'm <strong>Camilo Ramírez</strong>, undergraduate Mathematics student 
        dedicated to bridging theory and practice through code and data analysis. 
        Welcome to my digital garden of notes, projects, and solutions.
      </p>

      <div class="stats-wrapper">
        <div class="stats-label">Impact Metrics</div>
        <div class="stats-container">
          {stats.map(stat => (
            <div class="stat-item">
              <div class="stat-value" style={`color: ${stat.color}`}>
                {stat.value}
                {stat.pulse && <span class="pulse-dot"></span>}
              </div>
              <div class="stat-name">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <div class="hero-actions">
        <a href="/en/projects/" class="btn btn-primary">View Projects</a>
        <a href="/en/about/" class="btn btn-outline">About Me</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Copia EXACTAMENTE el mismo estilo que en la versión en español */
  /* Los estilos son idénticos, puedes copiar todo el bloque <style> del archivo anterior */
  
  /* --- DASHBOARD COLORS --- */
  :root {
    --color-active: #10b981;
    --color-done: #3b82f6;
    --color-freelance: #8b5cf6;
    --color-notes: #f59e0b;
  }

  /* --- CARTESIAN BACKGROUND --- */
  :global(body) { position: relative; }
  :global(body::before) {
    content: ''; position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -2; pointer-events: none;
    background-image: 
      linear-gradient(to right, rgba(128, 128, 128, 0.08) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 128, 128, 0.08) 1px, transparent 1px);
    background-size: 40px 40px;
    mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
    -webkit-mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
  }

  /* --- HERO LAYOUT --- */
  .hero {
    position: relative;
    padding: 80px 0 60px;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    /* overflow: hidden;  <--- AGREGA ESTO: Corta todo lo que se salga */
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Luz ambiental */
  .hero::before {
    content: ''; position: absolute; top: -50px; left: 50%; transform: translateX(-50%);
    width: 100%;       /* <--- CAMBIO: Ocupa el 100% del contenedor */
    max-width: 600px;  /* <--- CAMBIO: Pero nunca pases de 600px */
    height: 400px;
    background: radial-gradient(circle, var(--link) 0%, transparent 70%);
    opacity: 0.12; filter: blur(80px); z-index: -1; pointer-events: none;
  }

  .badge {
    display: inline-block; padding: 6px 16px; border-radius: 99px;
    font-size: 0.8rem; font-weight: 600; letter-spacing: 0.05em; text-transform: uppercase;
    background: rgba(139, 92, 246, 0.1); color: var(--link); border: 1px solid rgba(139, 92, 246, 0.2);
    margin-bottom: 24px; backdrop-filter: blur(5px);
  }

  .hero-title {
    font-size: 4rem; font-weight: 800; line-height: 1.1; letter-spacing: -0.03em;
    margin-bottom: 24px; animation: fadeUp 0.8s ease-out forwards; opacity: 0; transform: translateY(20px);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--link) 0%, #a855f7 50%, #ec4899 100%);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
  }

  .hero-desc {
    font-size: 1.35rem; color: var(--muted); line-height: 1.6; margin: 0 auto 40px; max-width: 700px;
    animation: fadeUp 0.8s ease-out 0.2s forwards; opacity: 0; transform: translateY(20px);
  }
  .hero-desc strong { color: var(--text); }

  /* --- STATS SECTION --- */
  .stats-wrapper {
    margin-bottom: 100px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    animation: fadeUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .stats-label {
    font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em;
    color: var(--muted); font-weight: 600;
  }

  .stats-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1px;
    background: var(--border);
    border: 1px solid var(--border);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.03);
    width: 100%;
  }

  .stat-item {
    background: var(--bg);
    padding: 24px 20px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }
  .stat-item:hover { background: var(--code-bg); }

  .stat-value {
    font-size: 2.5rem; font-weight: 800; line-height: 1; margin-bottom: 8px;
    font-family: ui-monospace, SFMono-Regular, Menlo, monospace;
    position: relative; display: inline-flex; align-items: flex-start;
  }

  .stat-name { font-size: 0.85rem; color: var(--muted); font-weight: 500; }

  .pulse-dot {
    width: 8px; height: 8px; background-color: currentColor; border-radius: 50%;
    margin-left: 6px; margin-top: 4px; animation: pulse 2s infinite;
  }

  /* --- ACTIONS --- */
  .hero-actions {
    display: flex; gap: 16px; justify-content: center;
    animation: fadeUp 0.8s ease-out 0.6s forwards;
    opacity: 0; transform: translateY(20px);
  }

  .btn {
    display: inline-flex; align-items: center; padding: 12px 32px; border-radius: 12px;
    font-weight: 600; font-size: 1rem; text-decoration: none; transition: all 0.2s ease;
  }
  .btn-primary {
    background: var(--text); color: var(--bg); border: 1px solid var(--text);
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
  }
  .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 8px 30px rgba(0,0,0,0.25); }
  .btn-outline { background: transparent; color: var(--text); border: 1px solid var(--border); }
  .btn-outline:hover { background: var(--code-bg); border-color: var(--text); }

  @keyframes pulse {
    0% { transform: scale(0.95); opacity: 1; box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7); }
    70% { transform: scale(1); opacity: 0; box-shadow: 0 0 0 6px rgba(16, 185, 129, 0); }
    100% { transform: scale(0.95); opacity: 0; }
  }
  @keyframes fadeUp { to { opacity: 1; transform: translateY(0); } }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .hero-title { font-size: 2.8rem; }
    .stats-container { grid-template-columns: 1fr 1fr; }
  }
  @media (max-width: 480px) {
    .stat-item { padding: 20px 10px; }
    .stat-value { font-size: 2rem; }
    .stat-name { font-size: 0.75rem; }
  }
</style>