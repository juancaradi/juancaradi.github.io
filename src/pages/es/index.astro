---
import Layout from '../../layouts/Layout.astro';

// Datos de ejemplo para las tarjetas de "Lo que hago"
const skills = [
  {
    title: "Matemáticas",
    desc: "Teoría de Grafos, TDA y Álgebra Abstracta.",
    icon: "∑"
  },
  {
    title: "Data Science",
    desc: "Análisis estadístico, Python, R y visualización.",
    icon: "📊"
  },
  {
    title: "Freelance",
    desc: "Asesoría académica y desarrollo de soluciones.",
    icon: "💼"
  }
];
---

<Layout title="Camilo Ramírez | Matemáticas & Datos" lang="es">
  <section class="hero">
    <div class="hero-content">
      <span class="badge">Disponible para proyectos</span>
      <h1 class="hero-title">
        Explorando la <span class="gradient-text">belleza abstracta</span> y su aplicación real.
      </h1>
      <p class="hero-desc">
        Hola, soy <strong>Camilo Ramírez</strong>, estudiante de Matemáticas dedicado a 
        llevar la teoría a la práctica mediante código y análisis de datos. 
        Bienvenido a mi jardín digital de notas, proyectos y soluciones.
      </p>

      <div class="hero-actions">
        <a href="/es/projects/" class="btn btn-primary">Ver Proyectos</a>
        <a href="/es/about/" class="btn btn-outline">Sobre mí</a>
      </div>
    </div>
  </section>

  <section class="skills-grid">
    {skills.map(skill => (
      <div class="skill-card">
        <div class="skill-icon">{skill.icon}</div>
        <h3>{skill.title}</h3>
        <p class="muted">{skill.desc}</p>
      </div>
    ))}
  </section>
</Layout>

<style>
  /* --- 1. FONDO CARTESIANO CORREGIDO --- */
  /* Usamos un pseudo-elemento para que NO afecte al contenido (sidebar/textos) */
  :global(body) {
    position: relative;
    /* Aseguramos el color base */
  }

  :global(body::before) {
    content: '';
    position: fixed; /* Se queda fijo al hacer scroll */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2; /* Se va bien al fondo */
    pointer-events: none; /* No interfiere con clicks */
    
    /* El Grid Matemático */
    background-image: 
      linear-gradient(to right, rgba(128, 128, 128, 0.08) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(128, 128, 128, 0.08) 1px, transparent 1px);
    background-size: 40px 40px;
    
    /* La máscara ahora solo desvanece las líneas del grid, no tu foto */
    mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
    -webkit-mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
  }

  /* --- HERO SECTION --- */
  .hero {
    position: relative;
    padding: 100px 0 60px;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  /* Luz ambiental detrás del título */
  .hero::before {
    content: '';
    position: absolute;
    top: -50px;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 400px;
    background: radial-gradient(circle, var(--link) 0%, transparent 70%);
    opacity: 0.12; 
    filter: blur(80px);
    z-index: -1;
    pointer-events: none;
  }

  .badge {
    display: inline-block;
    padding: 6px 16px;
    border-radius: 99px;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    background: rgba(139, 92, 246, 0.1);
    color: var(--link);
    border: 1px solid rgba(139, 92, 246, 0.2);
    margin-bottom: 24px;
    backdrop-filter: blur(5px);
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
    animation: fadeUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--link) 0%, #a855f7 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-desc {
    font-size: 1.35rem;
    color: var(--muted);
    line-height: 1.6;
    margin: 0 auto 40px;
    max-width: 700px;
    animation: fadeUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .hero-desc strong { color: var(--text); }

  .hero-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    animation: fadeUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  /* --- BOTONES --- */
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 12px 32px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: var(--text);
    color: var(--bg);
    border: 1px solid var(--text);
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.25);
  }

  .btn-outline {
    background: transparent;
    color: var(--text);
    border: 1px solid var(--border);
  }
  
  .btn-outline:hover {
    background: var(--code-bg);
    border-color: var(--text);
  }

  /* --- CARDS --- */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-top: 80px;
  }

  .skill-card {
    padding: 30px;
    border-radius: 20px;
    border: 1px solid rgba(128,128,128, 0.1);
    background: var(--code-bg);
    transition: transform 0.3s ease, border-color 0.3s ease;
    animation: fadeUp 1s ease-out 0.6s forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .skill-card:hover {
    transform: translateY(-5px);
    border-color: var(--link);
    background: linear-gradient(to bottom right, var(--code-bg), rgba(139, 92, 246, 0.05));
  }

  .skill-icon { font-size: 2.5rem; margin-bottom: 16px; }
  .skill-card h3 { margin: 0 0 8px; font-size: 1.1rem; }
  .skill-card p { margin: 0; font-size: 0.95rem; line-height: 1.5; }

  @keyframes fadeUp {
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 600px) {
    .hero-title { font-size: 2.8rem; }
    .hero-desc { font-size: 1.1rem; }
    .hero { padding-top: 60px; }
  }
</style>