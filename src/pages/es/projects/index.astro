---
/* CORRECCIÓN: Usamos 3 niveles para llegar a la raíz src/ */
import Layout from '../../../layouts/Layout.astro';

// Datos de ejemplo
const projects = [
  {
    title: "Análisis Topológico de Datos (TDA)",
    desc: "Implementación de homología persistente para analizar estructuras de datos complejas utilizando Python y librerías especializadas.",
    tags: ["Python", "TDA", "Math"],
    link: "#"
  },
  {
    title: "Inferencia Estadística en R",
    desc: "Scripts de análisis para pruebas de hipótesis y modelos de regresión, con generación automática de reportes en LaTeX.",
    tags: ["R", "Statistics", "LaTeX"],
    link: "#"
  },
  {
    title: "Teoría de Grafos & Redes",
    desc: "Visualización y cálculo de métricas de centralidad en redes sociales simuladas.",
    tags: ["Python", "NetworkX", "Graph Theory"],
    link: "#"
  }
];
---

<Layout title="Proyectos | Camilo Ramírez" lang="es">
  
  <header class="page-header">
    <h1 class="page-title">
      Proyectos <span class="gradient-text">Destacados</span>
    </h1>
    <p class="page-desc">
      Una colección de mis trabajos aplicando matemáticas puras y computación 
      para resolver problemas reales.
    </p>
  </header>

  <section class="projects-grid">
    {projects.map(project => (
      <a href={project.link} class="project-card">
        <div class="card-content">
          <h3>{project.title}</h3>
          <p>{project.desc}</p>
          
          <div class="tags">
            {project.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
        <div class="card-arrow">→</div>
      </a>
    ))}
  </section>

</Layout>

<style>
  /* --- PAGE HEADER --- */
  .page-header {
    text-align: center;
    padding: 60px 0 40px;
    max-width: 800px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--link) 0%, #a855f7 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-desc {
    font-size: 1.1rem;
    color: var(--muted);
    line-height: 1.6;
  }

  /* --- PROJECTS GRID --- */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
    margin-top: 20px;
  }

  /* --- CARD DESIGN --- */
  .project-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 24px;
    border-radius: 16px;
    background: var(--code-bg);
    border: 1px solid var(--border);
    text-decoration: none;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: var(--link);
    box-shadow: 0 10px 30px -10px rgba(0,0,0,0.1);
  }

  .card-content h3 {
    margin: 0 0 10px;
    font-size: 1.25rem;
    color: var(--text);
    font-weight: 700;
  }

  .card-content p {
    margin: 0 0 20px;
    font-size: 0.95rem;
    color: var(--muted);
    line-height: 1.5;
  }

  /* TAGS */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 4px 10px;
    border-radius: 99px;
    background: rgba(127, 127, 127, 0.1);
    color: var(--text);
    border: 1px solid var(--border);
  }

  .card-arrow {
    position: absolute;
    top: 24px;
    right: 24px;
    font-size: 1.2rem;
    color: var(--muted);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.2s ease;
  }

  .project-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--link);
  }

  @media (max-width: 600px) {
    .page-title { font-size: 2.2rem; }
  }
</style>