---
import Layout from '../../layouts/Layout.astro';
import { ui, defaultLang } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
// Aunque es un placeholder, mantenemos el pageTitle correcto para la pestaña del navegador
const pageTitle = lang === 'en' ? "About Me | Camilo Ramírez" : "Sobre Mí | Camilo Ramírez";

// Textos Hardcoded para el Placeholder
const titleStart = lang === 'en' ? "About" : "Sobre";
const titleEnd = lang === 'en' ? "Me" : "Mí";

const emptyTitle = lang === 'en' ? "Profile Update" : "Actualización de Perfil";
const emptyDesc = lang === 'en' 
  ? "I am currently rewriting my biography and technical stack overview. Check back soon!" 
  : "Actualmente estoy reescribiendo mi biografía y mi stack técnico. ¡Vuelve pronto!";
---

<Layout title={pageTitle} lang={lang}>
  <div class="page-container">
    
    <header class="page-header">
      <h1 class="page-title">
        {titleStart} <span class="gradient-text">{titleEnd}</span>
      </h1>
    </header>

    <div class="content-placeholder">
      <div class="icon-box">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
      </div>
      
      <h2>{emptyTitle}</h2>
      <p>{emptyDesc}</p>
      
      <div class="skeleton-layout">
        <div class="skeleton-line title"></div>
        <div class="skeleton-line text"></div>
        <div class="skeleton-line text short"></div>
        <div class="skeleton-grid">
            <div class="skeleton-box"></div>
            <div class="skeleton-box"></div>
        </div>
      </div>
    </div>

  </div>
</Layout>

<style>
  .page-container { max-width: 900px; margin: 0 auto; padding: 40px 20px; }
  
  .page-header { text-align: center; margin-bottom: 60px; }
  
  .page-title { 
    font-size: 2.5rem; 
    font-weight: 800; 
    margin-bottom: 16px; 
    color: var(--text); 
    line-height: 1.1; 
  }
  
  .gradient-text { 
    background: linear-gradient(135deg, var(--link) 0%, #a855f7 50%, #ec4899 100%); 
    -webkit-background-clip: text; 
    -webkit-text-fill-color: transparent; 
    background-clip: text;
  }

  /* --- PLACEHOLDER DESIGN --- */
  .content-placeholder {
    text-align: center;
    padding: 60px 20px;
    background: var(--code-bg);
    border: 1px dashed var(--border);
    border-radius: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    animation: fadeIn 0.6s ease-out;
  }

  .icon-box {
    color: var(--link);
    margin-bottom: 10px;
    opacity: 0.8;
  }

  .content-placeholder h2 {
    font-size: 1.5rem;
    color: var(--text);
    margin: 0;
  }

  .content-placeholder p {
    font-size: 1rem;
    color: var(--muted);
    max-width: 450px;
    margin: 0 auto;
  }

  /* --- SKELETON UI --- */
  .skeleton-layout {
    margin-top: 40px;
    width: 100%;
    max-width: 500px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    opacity: 0.4;
  }

  .skeleton-line {
    height: 12px;
    background: var(--border);
    border-radius: 6px;
    width: 100%;
  }

  .skeleton-line.title { height: 20px; width: 60%; margin: 0 auto 10px; }
  .skeleton-line.text { width: 100%; }
  .skeleton-line.short { width: 80%; margin: 0 auto; }

  .skeleton-grid {
      display: flex;
      gap: 16px;
      margin-top: 20px;
      justify-content: center;
  }

  .skeleton-box {
      width: 100px;
      height: 80px;
      background: var(--border);
      border-radius: 12px;
  }

  @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

  @media (max-width: 768px) {
    .page-title { font-size: 2rem; }
  }
</style>