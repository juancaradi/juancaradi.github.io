---
import Layout from '../../layouts/Layout.astro';
import { ui, defaultLang } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const currentLang = (lang === 'en' || lang === 'es') ? lang : defaultLang;
const t = ui[currentLang];

const pageTitle = lang === 'en' ? "Study Notes | Camilo Ramírez" : "Notas de Estudio | Camilo Ramírez";

// Textos temporales para este placeholder (luego podrían ir a ui.ts)
const subtitle = lang === 'en' 
  ? "A personal wiki of theorems, definitions, and proofs." 
  : "Una wiki personal de teoremas, definiciones y demostraciones.";

const emptyTitle = lang === 'en' ? "Coming Soon" : "Próximamente";
const emptyDesc = lang === 'en' 
  ? "I am compiling my LaTeX notes on Topology and Algebra. Stay tuned!" 
  : "Estoy compilando mis notas de LaTeX sobre Topología y Álgebra. ¡Atento!";
---

<Layout title={pageTitle} lang={lang}>
  <div class="page-container">
    
    <header class="page-header">
      <h1 class="page-title">
        {t.notes} <span class="gradient-text">Math</span>
      </h1>
      <p class="page-subtitle">{subtitle}</p>
    </header>

    <div class="content-placeholder">
      <div class="icon-box">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-book-open"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>
      </div>
      <h2>{emptyTitle}</h2>
      <p>{emptyDesc}</p>
      
      <div class="skeleton-grid">
        <div class="skeleton-card"></div>
        <div class="skeleton-card"></div>
        <div class="skeleton-card"></div>
      </div>
    </div>

  </div>
</Layout>

<style>
  .page-container { max-width: 900px; margin: 0 auto; padding: 40px 20px; }
  
  .page-header { text-align: center; margin-bottom: 60px; }
  
  .page-title { 
    font-size: 2.5rem; 
    font-weight: 800; 
    margin-bottom: 16px; 
    color: var(--text); 
    line-height: 1.1; 
  }
  
  .gradient-text { 
    background: linear-gradient(135deg, var(--link) 0%, #a855f7 50%, #ec4899 100%); 
    -webkit-background-clip: text; 
    -webkit-text-fill-color: transparent; 
    background-clip: text;
  }
  
  .page-subtitle { 
    font-size: 1.2rem; 
    color: var(--muted); 
    max-width: 700px; 
    margin: 0 auto; 
    line-height: 1.6; 
  }

  /* --- PLACEHOLDER DESIGN --- */
  .content-placeholder {
    text-align: center;
    padding: 60px 20px;
    background: var(--code-bg);
    border: 1px dashed var(--border);
    border-radius: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .icon-box {
    color: var(--link);
    margin-bottom: 10px;
    opacity: 0.8;
  }

  .content-placeholder h2 {
    font-size: 1.5rem;
    color: var(--text);
    margin: 0;
  }

  .content-placeholder p {
    font-size: 1rem;
    color: var(--muted);
    max-width: 400px;
    margin: 0;
  }

  /* Efecto Skeleton (Carga falsa) */
  .skeleton-grid {
    display: flex;
    gap: 16px;
    margin-top: 40px;
    opacity: 0.3;
  }
  
  .skeleton-card {
    width: 100px;
    height: 120px;
    background: var(--border);
    border-radius: 12px;
  }

  @media (max-width: 768px) {
    .page-title { font-size: 2rem; }
  }
</style>